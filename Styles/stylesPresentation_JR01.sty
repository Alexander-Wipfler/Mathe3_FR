% two columns
\newcommand{\twocol}[4]{\begin{minipage}[t]{#1}\vspace*{-4.5mm}#3\end{minipage} ~ \begin{minipage}[t]{#2}\vspace*{-4.5mm}#4\end{minipage}} % width1, width2, content1, content2
