% section/subsection page
\newcommand{\sectionframe}[1]{%
\begin{frame}{~}
\vspace*{10mm}
\begin{center}
\cboxgr{110mm}{\centering\vspace{3mm}\hrule\hrule\hrule\vspace*{10mm}
{\Huge\bf \thesection \, #1}
\vspace*{10mm}\hrule\hrule\hrule\vspace{3mm}}
\end{center}
\end{frame}
}
\newcommand{\subsectionframe}[2]{%
\begin{frame}{~}
\vspace*{8mm}
\begin{center}
\cboxgr{110mm}{\centering\vspace{3mm}\hrule\hrule\hrule\vspace*{8mm}
{\normalsize #1} \\[3mm]
{\Large\bf \thesection.\thesubsection \, #2}
\vspace*{8mm}\hrule\hrule\hrule\vspace{3mm}}
\end{center}
\end{frame}
}

